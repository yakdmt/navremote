<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:background="@color/cardview_dark_background"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:padding="8dp"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="4dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/checkpoint_ref"
                android:text="Пункт: ППП  УДП (Одинцово)"
                style="@style/Ref" />
            <TextView
                android:id="@+id/address"
                android:text="Россия, М.О., ул.Железнодорожная, 24"
                style="@style/MainInfo" />
            <TextView
                android:id="@+id/procedure_type"
                android:text="Тип операции: Оформление Документов"
                style="@style/MainInfo" />
            <TextView
                android:text="Прибытие"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                style="@style/MainInfo"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/expected_arrival"
                    android:text="Ожид.: 14/01/08 14:40:30"
                    style="@style/MainInfo"
                    android:layout_width="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/actual_arrival"
                    android:text="Факт.: 14/01/08 14:40:30"
                    style="@style/MainInfo"
                    android:layout_width="0dp"
                    android:layout_weight="1"/>
            </LinearLayout>
            <TextView
                android:text="Убытие"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                style="@style/MainInfo"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/expected_departure"
                    android:text="Ожид.: 14/01/08"
                    style="@style/MainInfo"
                    android:layout_width="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/actual_departure"
                    android:text="Факт.: 14/01/08 14:40:30"
                    style="@style/MainInfo"
                    android:layout_width="0dp"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>