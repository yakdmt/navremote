<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="8dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_margin="4dp"
            android:orientation="vertical"
            android:gravity="start"
            android:layout_gravity="top|start"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/client_name"
                android:text="Клиент: UPS-SCS (CIS)"
                style="@style/MainInfo" />
            <TextView
                android:id="@+id/description"
                android:text="Описание: Ceramics One More Test"
                style="@style/MainInfo" />


        </LinearLayout>
        <LinearLayout
            android:layout_margin="4dp"
            android:orientation="vertical"
            android:gravity="end"
            android:layout_gravity="top|end"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/id"
                android:text="50-31553"
                android:textSize="12sp"
                android:textColor="@color/cardview_dark_background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                style="@style/MainInfo"
                android:id="@+id/appearance_date"
                android:text="04/06/14"
                />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_margin="4dp"
            android:orientation="vertical"
            android:gravity="start"
            android:layout_gravity="top|start"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content">
            <TextView
                android:text="Отправление"
                style="@style/MainInfo"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/sender_name"
                android:text="VSMPO-AVISMA CORPORATION"
                style="@style/ServiceInfo" />
            <TextView
                android:id="@+id/expected_departure_date"
                android:text="23/03/1023"
                style="@style/ServiceInfo" />
            <TextView
                android:id="@+id/occurence"
                android:text="Город, ЯРОСЛАВЛЬ"
                style="@style/ServiceInfo" />


        </LinearLayout>

        <LinearLayout
            android:layout_margin="4dp"
            android:orientation="vertical"
            android:gravity="end"
            android:layout_gravity="top|end"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/master_document"
                android:textSize="12sp"
                android:text="064-78090891"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/transport_line"
                android:text="64 Czech Airlines"
                style="@style/ServiceInfo" />
                />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_margin="4dp"
            android:orientation="vertical"
            android:gravity="start"
            android:layout_gravity="top|start"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content">
            <TextView
                android:text="Прибытие"
                style="@style/MainInfo"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/consignee_name"
                android:text="СЕТРА ЛУБРИКАНТС"
                style="@style/ServiceInfo" />
            <TextView
                android:id="@+id/expected_arrival_date"
                android:text="23/03/1023"
                style="@style/ServiceInfo" />
            <TextView
                android:id="@+id/destination"
                android:text="Город, ЯРОСЛАВЛЬ"
                style="@style/ServiceInfo" />
        </LinearLayout>
        <LinearLayout
            android:layout_margin="4dp"
            android:orientation="vertical"
            android:gravity="end"
            android:layout_gravity="top|end"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/weight"
                android:text="Вес брутто: 1500 кг"
                style="@style/ServiceInfo" />

            <TextView
                android:id="@+id/volume"
                style="@style/ServiceInfo"
                android:text="Объем: 74,14 м3" />
            <TextView
                android:id="@+id/count"
                style="@style/ServiceInfo"
                android:text="мест: 1000" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>

