<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="8dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/name"
        android:text="Название: Chateaurenard"
        style="@style/MainInfo" />
    <TextView
        android:id="@+id/country_code"
        android:text="Код страны: FRA"
        style="@style/MainInfo" />
    <TextView
        android:id="@+id/type"
        android:text="Тип: FRA"
        style="@style/MainInfo" />
    <TextView
        android:id="@+id/city_name"
        android:text="Населенный пункт: Chateaurenard"
        style="@style/MainInfo" />
    <TextView
        android:id="@+id/info"
        style="@style/MainInfo" />
</LinearLayout>

